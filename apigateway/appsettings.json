{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Urls": "http://localhost:9000",
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "usersRoute": {
        "ClusterId": "users",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "paiementsRoute": {
        "ClusterId": "paiements",
        "Match": {
          "Path": "/payment/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "reservationRoute": {
        "ClusterId": "reservations",
        "Match": {
          "Path": "/reservation/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }


    },
    "Clusters": {
      "users": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5219"
          }
        }
      },
      "paiements": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:3000"
          }
        }
      },
      "reservations": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8000"
          }
        }
      }
    }

  }
}